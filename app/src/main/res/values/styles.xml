<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_amber_600</item>
        <item name="colorPrimaryDark">@color/md_amber_800</item>
        <item name="colorAccent">@color/md_amber_400</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/md_amber_400</item>
        <item name="colorButtonNormal">@color/md_amber_600</item>
    </style>

    <style name="Counter" parent="TextAppearance.Design.Counter">
        <item name="android:textColor">@color/md_amber_400</item>
    </style>

    <style name="CounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">@color/foreground_material_light</item>
    </style>

    <style name="Hivetheme" parent="AppTheme" />

    <style name="hiveapp" parent="Theme.AppCompat.NoActionBar" />

</resources>
